<%= form_for(@equipamento) do |f| %>
  <% if @equipamento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@equipamento.errors.count, "error") %> prohibited this equipamento from being saved:</h2>

      <ul>
      <% @equipamento.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
<div id="divContainerConteudo">
  <table cellpadding=0 cellspacing=0 width="70%" align="center">
	<tr>
		<td>ID:&nbsp;&nbsp;</td>
		<td align="right"><%= f.text_field :id, :readonly => true %></td>
	</tr>
	<tr>
		<td>Descrição:&nbsp;&nbsp;</td>
		<td align="right"><%= f.text_field :descricao %></td>
	</tr>
	<tr>
		<td>Voltagem:&nbsp;&nbsp;</td>
		<td align="right"><%= f.text_field :voltagem %></td>
	</tr>
	<tr>
		<td>Modelo:&nbsp;&nbsp;</td>
		<td align="right"><%= f.text_field :modelo %></td>
	</tr>
	<tr>
		<td>Marca:&nbsp;&nbsp;</td>
		<td align="right"><%= f.text_field :marca %></td>
	</tr>

	<tr>
		<td colspan="2" align="right">
  			<div class="actions">
			<br/>
   			 <%= f.submit %>
 			</div>
		</td>
	</tr>
  </table>
</div>
<% end %>
